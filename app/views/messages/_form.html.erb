<%= form_for(@message) do |f| %>

	<%= f.error_messages %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>

   <div class="field">
    <%= f.label :color %><br />
    <%= f.select :color,
                Message::COLORS,
                :prompt => "Choose color" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

