<h1>Messages history</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Emotion</th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>




     <td BGCOLOR="#<%=message.color%>"><%= message.body %></td>
   <!-- <td style="border-style:solid; border-color:#ff0000"><%= message.body %></td> !-->
    <td><%= image_tag (Message::IMG_DIR + message.emotion) %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

