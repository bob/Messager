$("#comment_<%= @comment.id %>").fadeOut();
$("#comment_<%= @comment.id %>").remove();

$("#comments_count").html("<%= pluralize(@comment.commentable.comments.count, "comment") %>")
$("#comments_count").effect("highlight", {}, 3000)
<% if @comment.commentable.comments.count <= Comment.per_page %>
  $("#pagination").fadeOut();
  $("#pagination").remove();
<% end %>

<% if @comment_to_bottom %>
$("<%= escape_javascript(render(:partial => "comments/comment_item", :locals => {:comment => @comment_to_bottom})) %>").appendTo($("#comments"))
<% end %>

